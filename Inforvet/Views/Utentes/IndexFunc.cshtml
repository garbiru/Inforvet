@using Inforvet.Areas.Identity.Data
@model IEnumerable<Inforvet.Models.Utente>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="row">
            <div class="col-lg-12">
                <div class="section-title text-center">
                    <div class="title-text">
                        <h2>Animais da InforVet</h2>
                    </div>
                    <p>
                        Aqui está a lista de todos os animais registados no sistema da InforVet.
                    </p>
                </div>
            </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="list-group">
                <div class="list-group-item py-3">
                    <div class="row">
                        <div class="col">
                        <p class="c-titulo">Nome</p>
                        </div>
                        <div class="col">
                        <p class="c-titulo">Foto</p>
                        </div>
                        <div class="col">
                        <p class="c-titulo">Peso</p>
                        </div>
                        <div class="col">
                        <p class="c-titulo">Raça</p>
                        </div>
                        <div class="col">
                        <p class="c-titulo">Sexo</p>
                        </div>
                        <div class="col">
                        <p class="c-titulo">Estado</p>
                        </div>
                        <div class="col">
                        <p class="c-titulo">Outros</p>
                        </div>
                </div>
                @foreach (var item in Model){
                    <div class="list-group-item py-3">
                        <div class="row">
                            <div class="col">
                                <p class="c-texto">@Html.DisplayFor(modelItem => item.Name)</p>
                            </div>
                            <div class="col">
                                <img src="https://cdn-icons-png.flaticon.com/512/194/194279.png"
                                width="100" height="100">
                            </div>
                            <div class="col">
                                <p class="c-texto">@Html.DisplayFor(modelItem => item.Weight)</p>
                            </div>
                            <div class="col">
                                <p class="c-texto">@Html.DisplayFor(modelItem => item.Race)</p>
                            </div>
                            <div class="col">
                                <p class="c-texto">@Html.DisplayFor(modelItem => item.Sex)</p>
                            </div>
                            <div class="col">
                                <p class="c-texto">@Html.DisplayFor(modelItem => item.State)</p>
                            </div>
                            <div class="col">
                                <a asp-action="EditClient" asp-route-id="@item.Id">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </div>
                        </div>
                    </div>
                }
             </div>
            </div>
        </div>
    </div>
</div>
